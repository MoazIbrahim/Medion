    <link rel="stylesheet" href="/Css/medipolcss.css" />
    <title>Register</title>
  </head>
  <body class="log">
    <div
      class="container d-flex justify-content-center align-items-center min-vh-100"
    >
      <form
        id="loginform"
        class="mt-5"
        style="
          background-color: linear-gradient(90deg, #03045e, #023e8a, #0077b6);
        "
        action="/registerscreen"
        method="POST"
      >
        <div class="card">
          <div class="row">
            <div class="col-4"></div>
            <div class="col-4 py-4">
              <img
                class="card-img-top img-fluid"
                src="noavatar.png"
                style="width: 250px"
                alt=""
              />
            </div>
            <div class="col-4"></div>
          </div>
          <div class="card-body">
            <form action="loginscreen.html">
              <div class="form-group">
                <div class="row">
                  <div class="col-6">
                    <label for="first">First Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="first"
                      name="first"
                      required
                    />
                  </div>
                  <div class="col-6">
                    <label for="lastname">Last Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="last"
                      name="last"
                      required
                    />
                  </div>
                  <div class="form-group my-3 ml-3">
                    <label for="type">What is your occupation ?</label>
                    <select
                      class="form-control"
                      id="type"
                      name="type"
                      onchange="disableOthers(this)"
                    >
                      <option value="Student">Student</option>
                      <option value="Teacher">Teacher</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-6">
                    <label for="department">Department</label>
                    <select
                      class="form-control"
                      id="department"
                      name="department"
                    >
                      <option value="Computer Engineering">
                        Computer Engineering
                      </option>
                      <option value="Electrical Engineering">
                        Electrical Engineering
                      </option>
                      <option value="Biomedical Engineering">
                        Biomedical Engineering
                      </option>
                      <option value="Civil Engineering">
                        Civil Engineering
                      </option>
                      <option value="Industrial Engineering">
                        Industrial Engineering
                      </option>
                    </select>
                  </div>
                  <div class="col-3">
                    <label for="year">Year</label>
                    <select class="form-control" id="year" name="year">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                    </select>
                  </div>
                  <div class="col-3">
                    <label for="semester">Semester</label>
                    <select class="form-control" id="semester" name="semester">
                      <option value="Fall">Fall</option>
                      <option value="Spring">Spring</option>
                      <option value="Summer">Summer</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  aria-describedby="emailHelp"
                  pattern="^[a-zA-Z0-9]+@[a-zA-Z0-9.medipol.edu\.tr$"
                  required
                />

                <small id="emailHelp" class="form-text text-primary"
                  >Use your Medipol email given by the university
                  (.medipol.edu.tr).</small
                >
              </div>

              <div class="form-group">
                <label for="username">Student ID</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  aria-describedby="usernameHelp"
                  required
                />

                <small id="usernameHelp" class="form-text text-primary"
                  >Use your Student ID given by the university
                </small>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block mt-auto">
                Register
              </button>

              <p class="mt-4">
                Already have an account ?
                <a href="/loginscreen">Login</a>
              </p>
            </form>
          </div>
