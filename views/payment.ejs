<% layout('layouts/boilerplate') %>
<div class="container d-flex flex-column min-vh-100 align-item-center my-5">
  <h3 class="my-5 ms-3 w-25">PAYMENTS</h3>
  <hr />
  <% if (user.type == 'Teacher') { %>
  <button id="add-payment-btn" class="btn btn-primary my-5">Add Payment</button>
  <% } %>
  <div id="add-payment-modal" class="modal">
    <div class="modal-content">
      <span class="close ml-auto">&times;</span>
      <form action="/payments/addPayment" method="POST">
        <div class="form-group my-3">
          <label class="form-label" for="year">Year</label>
          <input class="form-control" type="text" id="year" name="year" />
        </div>
        <div class="form-group my-3">
          <label class="form-label" for="description">Description</label>
          <input
            class="form-control"
            id="description"
            name="description"
            type="text"
          />
        </div>
        <div class="form-group my-3">
          <label class="form-label" for="requiredPayment"
            >Required Payment $</label
          >
          <input
            class="form-control"
            type="number"
            id="requiredPayment"
            name="requiredPayment"
          />
        </div>
        <button type="submit" class="btn btn-primary mt-5">Add</button>
      </form>
    </div>
  </div>

  <% for ( payment of payments) { %>
  <div class="card w-100 my-3 mr-auto">
    <h5 class="card-header"><%= payment.year %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= payment.requiredPayment %></h5>
      <p class="card-text"><%= payment.description %></p>
      <button id="make-payment-btn" class="btn btn-success">
        Make Payment
      </button>
      <div id="make-payment-modal" class="modal">
        <div class="modal-content">
          <span class="close ml-auto">&times;</span>

          <div class="row">
            <div class="col">
              <h3 class="title">BILLING ADDRESS</h3>

              <div class="form-group">
                <label class="form-label" for="">Full name</label>
                <input
                  class="form-control"
                  type="text"
                  placeholder="Moaz ibrahim"
                />
              </div>
              <div class="form-group">
                <label class="form-label" for="">Email</label>
                <input
                  class="form-control"
                  type="email"
                  placeholder="moaz@gmail.com"
                />
              </div>
              <div class="form-group">
                <label class="form-label" for="">Address</label>
                <input
                  class="form-control"
                  type="text"
                  placeholder="123 Street"
                />
              </div>
              <div class="form-group">
                <label class="form-label" for="">City</label>
                <input
                  class="form-control"
                  type="text"
                  placeholder="Başakşehir"
                />
              </div>

              <div class="flex">
                <div class="form-group">
                  <label class="form-label" for="">State</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Istanbul"
                  />
                </div>
                <div class="form-group">
                  <label class="form-label" for="">Zip Code</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="123 456"
                  />
                </div>
              </div>
            </div>

            <div class="col">
              <h3 class="title">PAYMENT</h3>

              <div class="inputBox">
                <label class="form-label" for="">Cards Accepted</label>
                <img
                  src="/clipart1758053.png"
                  style="width: 200px; height: 35px; margin-left: 50px"
                  alt=""
                />
              </div>
              <div class="inputBox">
                <label class="form-label" for="">Name On Card</label>
                <input
                  class="form-control"
                  type="text"
                  placeholder="Moaz Ibrahim"
                />
              </div>
              <div class="inputBox">
                <label class="form-label" for="">Card Number</label>
                <input
                  class="form-control"
                  type="number"
                  placeholder="1111-2222-3333-4444"
                />
              </div>
              <div class="inputBox">
                <label class="form-label" for="">Country</label>
                <input class="form-control" type="text" placeholder="Turkey" />
              </div>

              <div class="flex">
                <div class="inputBox">
                  <label class="form-label" for="">Expires</label>
                  <input
                    class="form-control"
                    type="number"
                    placeholder="01/28"
                  />
                </div>
                <div class="inputBox">
                  <label class="form-label" for="">CVV</label>
                  <input class="form-control" type="text" placeholder="1234" />
                </div>
              </div>
            </div>
          </div>
          <form action="/payment/<%=payment._id  %>?_method=PUT" method="POST">
            <div class="inputBox my-4">
              <label class="form-label" for="">Amount ($)</label>
              <input
                type="number"
                class="form-control mt-2"
                id="amount"
                name="amount"
              />
            </div>
            <button type="submit" class="btn btn-success">Proceed</button>
          </form>
        </div>
      </div>
      <div class="w-100 d-flex">
        <div class="ml-auto">
          <small class="text-danger font-weight-bold"
            >Unpaid : <%= payment.requiredPayment - payment.paidPayment
            %></small
          >
          <hr />
          <small class="text-success mx-3 font-weight-bold"
            >Paid : <%= payment.paidPayment %></small
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
<script
  src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
  integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
  crossorigin="anonymous"
></script>
<script
  src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
  integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
  crossorigin="anonymous"
></script>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
  integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
  crossorigin="anonymous"
></script>
<style>
  body {
    background-color: #f1faee;
  }
</style>
<script>
  const addPaymentBtns = document.querySelectorAll("#add-payment-btn");
  const makePaymentBtns = document.querySelectorAll("#make-payment-btn");

  const addPaymentModals = document.querySelectorAll("#add-payment-modal");
  const makePaymentModals = document.querySelectorAll("#make-payment-modal");

  const closeAddModals = document.querySelectorAll(".close");
  const closemakeModals = document.querySelectorAll(".close");

  addPaymentBtns.forEach((btn, index) => {
    const addPaymentModal = addPaymentModals[index];
    btn.addEventListener("click", () => {
      addPaymentModal.style.display = "block";
    });
    closeAddModals[index].addEventListener("click", () => {
      addPaymentModal.style.display = "none";
    });
    window.addEventListener("click", (event) => {
      if (event.target == addPaymentModal) {
        addPaymentModal.style.display = "none";
      }
    });
  });
  makePaymentBtns.forEach((btn, index) => {
    const makePaymentModal = makePaymentModals[index];
    btn.addEventListener("click", () => {
      makePaymentModal.style.display = "block";
    });
    closemakeModals[index].addEventListener("click", () => {
      makePaymentModal.style.display = "none";
    });
    window.addEventListener("click", (event) => {
      if (event.target == makePaymentModal) {
        makePaymentModal.style.display = "none";
      }
    });
  });
</script>
