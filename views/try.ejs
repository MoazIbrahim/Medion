<% for(let post of course.posts) { %>
<div class="d-flex flex-column mb-3" id="comment-container">
  <div class="coloor3">
    <div class="flex-row d-flex">
      <img src="" width="40" class="rounded-circle" />
      <div class="d-flex flex-column justify-content-start ml-2">
        <span class="d-block font-weight-bold name">
          <%= post.author.first %> <%= post.author.last %>
        </span>
        <span class="date text-black-50"><%= post.date %></span>
      </div>
    </div>
    <div class="mt-3">
      <p class="comment-text"><%= post.content %></p>
    </div>
  </div>
  <hr />
</div>
<% } %>
